{
  "manifest_version": 2,
  "name": "Scorethical - sustainability insights",
  "version": "0.1.0",
  "description": "Evaluates the sustainability impact of each product and provides information to the users.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["*://*.migros.ch/*"]
  },
  "browser_action": {
    "default_title": "Scorethical-extension",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "web_accessible_resources": ["ns*.png", "ns*.PNG", "survey.jpg", "task-1.png", "task-2.png", "task.png", "task-AB-ch.png", "task-C-ch.png"],
  "permissions": ["storage", "cookies", "http://*.rewe.de/"],
  "content_scripts": [{
    "matches": ["*://*.migros.ch/*", "*://*.migros.de/*", "*://*.migros.it/*", "*://*.rewe.de/*"],
    "run_at": "document_end",
    "js": [
      "contentScript.js"
    ]
  }]
}
